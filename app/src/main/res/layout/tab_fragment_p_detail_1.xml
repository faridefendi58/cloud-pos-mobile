<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/po_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_po_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:text="Nomor PO :"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    />

                <TextView
                    android:id="@+id/txt_po_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginVertical="5dp">

                <TextView
                    android:id="@+id/txt_supplier_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:text="Supplier :"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    />

                <TextView
                    android:id="@+id/txt_supplier_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:layout_gravity="right"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginVertical="5dp">

                <TextView
                    android:id="@+id/txt_dest_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:text="Area Tujuan :"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    />

                <TextView
                    android:id="@+id/txt_wh_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:layout_gravity="right"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginVertical="5dp">

                <TextView
                    android:id="@+id/txt_shipment_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:text="Cara Pengiriman :"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    />

                <TextView
                    android:id="@+id/txt_shipment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:layout_gravity="right"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginVertical="5dp">

                <TextView
                    android:id="@+id/txt_list_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:text="Detail Barang :"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    />

                <ListView
                    android:id="@+id/txt_list_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:layout_gravity="left"
                    android:layout_marginTop="30dp"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginVertical="5dp">

                <TextView
                    android:id="@+id/txt_created_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:text="Tanggal Penerbitan :"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    />

                <TextView
                    android:id="@+id/txt_created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:layout_gravity="right"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginVertical="5dp">

                <TextView
                    android:id="@+id/txt_created_by_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:text="Diterbitkan Oleh :"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    />

                <TextView
                    android:id="@+id/txt_created_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:layout_gravity="right"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginVertical="5dp">

                <TextView
                    android:id="@+id/txt_status_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:text="Status :"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    />

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"
                    android:layout_gravity="right"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/btn_remove"
                android:textColor="@color/colorGrey"
                android:drawableTop="@drawable/ic_btn_remove"
                android:clickable="true"
                android:onClick="cancelPO" />

            <Button
                android:id="@+id/updateButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/btn_update"
                android:textColor="@color/colorGrey"
                android:drawableTop="@drawable/ic_btn_update"
                android:clickable="true"
                android:onClick="updatePO" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>