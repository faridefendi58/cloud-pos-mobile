<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/image_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginBottom="-37dp"
        android:clickable="true"
        android:src="@drawable/ic_close_black_24dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ubah Data Pemesanan"
        android:paddingLeft="0dp"
        android:textSize="16dip"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textlines"
        />

    <TextView
        android:id="@+id/txt_label_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16dip"
        android:text="Nama Produk :"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txt_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="15dip"
        android:text=""
        />

    <TextView
        android:id="@+id/txt_label_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16dip"
        android:text="Jumlah Pengiriman :"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/txt_qty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="0dp"
        android:hint="Masukkan jumlah barang"
        android:text=""
        android:inputType="number"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btn_dialog_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Simpan"
            android:background="@color/green"
            android:textColor="#fff"
            android:layout_gravity="left"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Batal"
            android:background="@color/yellow"
            android:textColor="#fff"
            android:layout_gravity="left"
            android:layout_marginLeft="100dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_dialog_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Hapus"
            android:background="@color/colorAccent"
            android:textColor="#fff"
            android:layout_gravity="left"
            android:layout_marginLeft="100dp"
            android:visibility="visible"/>
    </FrameLayout>

    <TextView
        android:id="@+id/po_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        />

</LinearLayout>