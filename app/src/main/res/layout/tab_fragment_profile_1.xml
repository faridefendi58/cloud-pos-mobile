<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:columnCount="4" >

        <TextView
            android:text="@string/txt_form_requirement"
            android:textSize="16dip"
            android:layout_columnSpan="4"
            android:layout_gravity="left"
            android:textStyle="bold"
            />

        <TextView
            android:text="@string/label_profile_name"
            android:layout_gravity="right"
            />

        <EditText
            android:ems="10"
            android:id="@+id/input_name"
            android:inputType="textPersonName"
            android:singleLine="true"
            />

        <TextView
            android:text="@string/label_profile_email"
            android:layout_column="0"
            android:layout_gravity="right"
            />

        <EditText
            android:ems="10"
            android:id="@+id/input_email"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            />

        <TextView
            android:text="@string/label_profile_username"
            android:layout_column="0"
            android:layout_gravity="right"
            />

        <EditText
            android:ems="10"
            android:id="@+id/input_username"
            android:singleLine="true"
            />

        <TextView
            android:text="@string/label_profile_phone"
            android:layout_column="0"
            android:layout_gravity="right"
            />

        <EditText
            android:ems="10"
            android:id="@+id/input_phone"
            android:inputType="textPhonetic"
            android:singleLine="true"
            android:text=""
            />

        <Space
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            />

        <Button
            android:drawableTop="@drawable/ic_btn_save"
            android:text="@string/btn_save"
            android:layout_row="6"
            android:layout_column="3"
            android:background="@android:color/transparent"
            android:onClick="updateProfile"
            android:clickable="true"
            />
    </GridLayout>

</ScrollView>